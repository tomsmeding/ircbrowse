name:                snap-app
version:             0.6.0
synopsis:            Simple modules for writing apps with Snap, abstracted from hpaste.
homepage:            https://github.com/chrisdone/snap-app
license:             BSD3
license-file:        LICENSE
author:              Chris Done
maintainer:          chrisdone@gmail.com
category:            Web
build-type:          Simple
cabal-version:       >=1.8

library
  ghc-options:       -O2 -Wall
  hs-source-dirs:    src
  exposed-modules:   Snap.App, Snap.App.Types, Snap.App.Controller, Snap.App.Model, Snap.App.Migrate,
                     Snap.App.Cache, Snap.App.XML, Snap.App.RSS,
                     Data.Pagination, Text.Blaze.Extra, Text.Blaze.Pagination,
                     Text.Blaze.Pagination.Unbounded,
                     Control.Monad.Env, Data.Monoid.Operator,
                     Network.URI.Params
  build-depends:     base >= 4 && <5,
                     snap-core,
                     network-uri,
                     postgresql-simple,
                     mtl,
                     blaze-html >= 0.6,
                     blaze-markup >= 0.5,
                     safe,
                     text,
                     utf8-string,
                     bytestring,
                     cgi,
                     data-default,
                     filepath,
                     directory,
                     feed,
                     xml,
                     time,
                     monad-control,
                     transformers-base,
                     lifted-base
